@model List<MyShop.Core.Models.Product>

@{
    ViewBag.Title = "Home Page";
}


<h1>Products</h1>

@foreach(var item in Model)
{
<div class="col-md-4" style="height:400px; padding:10px; margin:10px; border: solid thick whitesmoke">

    <div class="col-md-12">

        <img class="img" style="height:200px; width: 150px" src="~/Content/ProductsImages/@item.Image" />

    </div>

    <div class="col-md-12">
        <strong>@Html.ActionLink(item.Description, "Details", new { id = item.Id })</strong>
    </div>

    <div class="col-md-12">
        <h4>@item.Price</h4>
    </div>

    <div class="col-md-12">
        <a href="#" class="btn btn-default">Add to Basket</a> 
    </div>


</div>
}


<div class="col-md-12 clearfix"/>
